{
  "name": "mysticgrid",
  "version": "1.0.0",
  "description": "MysticGrid - A collaborative multiplayer puzzle game",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:real": "jest tests/game-real.test.js",
    "test:functionality": "jest tests/functionality.test.js",
    "test:integration": "jest tests/game-integration.test.js",
    "test:unit": "jest tests/game.test.js tests/lobby.test.js",
    "test:html": "jest tests/html.test.js",
    "test:css": "jest tests/css.test.js",
    "lint:js": "eslint static/js/**/*.js",
    "lint:css": "stylelint static/css/**/*.css",
    "lint:html": "htmlhint templates/**/*.html",
    "test:all": "npm run lint:js && npm run lint:css && npm run lint:html && npm run test",
    "test:quick": "npm run test:unit && npm run test:functionality"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/user-event": "^14.5.1",
    "eslint": "^8.54.0",
    "htmlhint": "^1.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "static/js/**/*.js",
      "!static/js/vendor/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}
